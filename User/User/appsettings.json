            "Override": {
                "Microsoft": "Warning",
                "System": "Warning"
            }
        },
        "WriteTo": [
            {
                "Name": "MySQL",
                "Args": {
                    "connectionString": "Server=srv1691.hstgr.io; Database=u676203545_logs; Uid=u676203545_logs; Pwd=F3nPimo>; SslMode=Preferred;",
                    "tableName": "Logs",
                    "restrictedToMinimumLevel": "Information"
                }
            },
            {
                "Name": "Console",
                "Args": {
                    "restrictedToMinimumLevel": "Information"
                }
